@model p2g21.Models.Domain.Voorstel

@{
    ViewBag.Title = "Verwijderen voorstel";
    Layout = "~/Views/Shared/_LayoutApps.cshtml";
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
}

<h2>@ViewBag.Title</h2>

<h3>Weet je zeker dat je het voorstel @Model.VoorstelTitel wil verwijderen?</h3>

@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Verwijder" /> |
        @Html.ActionLink("Terug", "Index")
    </p>
}