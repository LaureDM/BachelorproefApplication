<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
</head>
<body>
    <header class="navbar navbar-static-top">


        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                    <a class="navbar-brand"> <span class="glyphicon glyphicon-home"></span> Bachelorproef </a>
            </div>
            @if (User.Identity.IsAuthenticated) { 
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            @using (Html.BeginForm("LogOff", "Account"))
                            {
                                @Html.AntiForgeryToken()
                                <button class="btn btn-inverse" title="Log out" type="submit">Log Off</button>
                            }
                    </ul>
                </li>
            </ul>
            }
        </nav>


    </header>
    <div class="container">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-2.1.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
