@model p2g21.Models.NieuwWachtwoordModel

@{
    ViewBag.Title = "Nieuw Wachtwoord";
<link href="~/Content/bootstrap.css" rel="stylesheet" />
}

<h1>Verander je wachtwoord</h1>

@using(Html.BeginForm("NieuwWachtwoord", "Account", FormMethod.Post,
    new { @class = "form-horizontal", role = "form" }))
{
@Html.LabelFor(m => m.NieuwWachtwoord)<br />
@Html.TextBoxFor(m => m.NieuwWachtwoord)
    @Html.ValidationMessageFor(m => m.NieuwWachtwoord)<br />
        @Html.LabelFor(m => m.BevestigWachtwoord)<br />
    @Html.TextBoxFor(m => m.BevestigWachtwoord)
    @Html.ValidationMessageFor(m=>m.BevestigWachtwoord)<br />
<input type="submit" class="btn btn-default" value="Ok" />
}


