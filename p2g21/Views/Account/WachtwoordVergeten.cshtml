@model p2g21.Models.WachtwoordVergetenModel

@{
    ViewBag.Title = "Wachtwoord vergeten";
    Layout = "~/Views/Shared/_LayoutApps.cshtml";
<link href="~/Content/bootstrap.css" rel="stylesheet" />
}

<h2>Wachtwoord Vergeten</h2>
<br />
@using (Html.BeginForm("WachtwoordVergeten", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{ 
    <table class="table">
        <tr>
            <th>
                @Html.LabelFor(m => m.Email)
            </th>
            <td>
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </td>
        </tr>
    </table>
    <br />
    <br />
    <input type="submit" class="btn btn-default" value="Zend mij een email" />
}